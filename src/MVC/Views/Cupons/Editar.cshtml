@model Berrini.Application.ViewModels.CupomViewModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar cupom</h2>
@if(ViewBag.Alerta!="")
{
    <div class="alert alert-warning">
        @ViewBag.Alerta
    </div> 
}
<div class="panel panel-default">
    <div class="panel-heading"></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Criacao)
            @Html.HiddenFor(m => m.NumeroCupom)
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-lg-6">

                    @Html.LabelFor(model => model.MesesValidade, htmlAttributes: new { @class = "control-label col-md-4" }) (meses)
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.MesesValidade, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                        @Html.ValidationMessageFor(model => model.MesesValidade, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="col-lg-6">

                    @Html.LabelFor(model => model.PremioId, new { @class = "control-label col-md-2 " })

                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.PremioId, Model.PremiosDisponiveis, "Sem prêmio", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PremioId, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>

            <div class="pull-right btn-group">
                @if(ViewBag.Alerta=="")
                {

                    <input type="submit" value="Salvar" class="btn btn-primary"/>

                }
                @Html.ActionLink("Cancelar", "Index", "Cupons", null, new {@class="btn btn-success"})
            </div>

        }

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}